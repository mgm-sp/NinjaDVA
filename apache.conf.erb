<%# encoding: UTF-8 %>
<% require_relative "config_defaults" %>
<VirtualHost *:80>
	ServerAdmin webmaster@localhost
	DocumentRoot <%=$conf.installdir%>/www
	ServerName dvmail.<%=$conf.domain%>

<Directory "<%=$conf.installdir%>/www">
		AllowOverride All
	</Directory>

	ErrorLog ${APACHE_LOG_DIR}/error.log
	CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>

