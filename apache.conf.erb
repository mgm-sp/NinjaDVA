<%# encoding: UTF-8 %>
<%
	require_relative "config_defaults"
["mail","funny-pics","dashboard","myhomepage"].each{|server|
%>
<VirtualHost *:80>
	ServerAdmin webmaster@localhost
	DocumentRoot <%=$conf.installdir%>/<%=server%>
	ServerName <%=server%>.<%=$conf.domain%>

	<Directory "<%=$conf.installdir%>/<%=server%>">
		AllowOverride All
	</Directory>

	ErrorLog ${APACHE_LOG_DIR}/error.log
	CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>
<%}%>
